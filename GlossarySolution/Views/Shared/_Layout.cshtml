<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding-left: 12px;">
            @*<a class="btn btn-outline-brand" href="/Home">&nbsp;Glossary&nbsp;</a>*@
            <a class="btn btn-outline-brand" href="/Home/Index" aria-label="Glossary index" title="Glossary index">
                <div style="font-size: 1.3em;"><i class="fab fa-glide"></i></div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn" href="/Home/List" aria-label="List of all terms">&nbsp;&nbsp;Terms&nbsp;</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" href="/Home/Create" aria-label="Create a new term definition">&nbsp;&nbsp;Create&nbsp;</a>
                    </li>
                </ul>
            </div>
            <div>
                <a class="btn btn-sm btn-outline-info" href="/Home/ApiHelp" aria-label="API interface">API</a>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer-light">
            <p>&copy; @DateTime.Now.Year - Robert McComb</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
